			switch (payload[0]) {
				case 'switch':
                case 'socket':
					parent.homieOnOffDev (topic[2],'onoff')
                    //def evt33 = createEvent(name: "OnOffDev", value: topic[2], data: [seq: sequence], isStateChange: true)
